<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.kenanhaciyev.mylessonproject.MainActivtyViewModel" />

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="#DFD9C4"
    android:padding="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etxt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={viewModel.name}"
        android:hint="User Name" />

    <EditText
        android:id="@+id/etxt_usersurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Surname"
        android:text="@={viewModel.surname}"
        app:layout_constraintTop_toBottomOf="@id/etxt_username" />

    <EditText
        android:id="@+id/etxt_clas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={viewModel.clas}"
        android:hint="Class"
        app:layout_constraintTop_toBottomOf="@id/etxt_usersurname" />

    <EditText
        android:id="@+id/etxt_fullData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{viewModel.fullData}"

        app:layout_constraintTop_toBottomOf="@id/etxt_clas" />


    <Button
        android:id="@+id/btn_daxilet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:text="Daxil et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etxt_fullData"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>